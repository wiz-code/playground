{
  "env": {
    "browser": true,
    "es2024": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "jsx-a11y"],
  "plugins": [],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "globalThis": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 15,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.client.js"
      }
    }
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never",
        "js": "never",
        "mjs": "never",
        "cjs": "never",
        "jsx": "never"
      }
    ],
    "no-restricted-globals": "off"
  }
}
